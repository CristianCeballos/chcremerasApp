@using CHCRemerasApp.Models;
@using CHCRemerasApp.ViewsModel;

@{
    Layout = null;
}

@model RemerasViewModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Nueva Remera</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/estilosGaleria.css" rel="stylesheet" />


</head>
<body>

    @*<div>
        <ul class="nav nav-tabs">

            <li role="presentation"><a href="/Home/Index">Inicio</a> </li>
            <li role="presentation"><a href="/Pedidos/MostrarPedidos">Pedidos</a> </li>
