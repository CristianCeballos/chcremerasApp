            @using (Html.BeginForm())
            {

                <tr>
                    <td>Fecha</td>
                    <td>@DateTime.Today.ToShortDateString()</td>
                </tr>

                    <tr>
                        <td>Clientes</td>
                        <td>@Html.DropDownListFor(p => p.pedido.id_cliente,
