@using CHCRemerasApp.Models;
@model  CHCRemerasApp.ViewsModel.ClientesViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>

    <title>Mostrar Clientes</title>

    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />

    <link href="~/Content/estilosGaleria.css" rel="stylesheet" />
    <link href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" rel="stylesheet" />
    <link href="~/Content/EstilosTitulo.css" rel="stylesheet" />

    <script>
        @if (@Model.bandera==1)
        {

        }
    </script>

</head>
<body onload="deshabilitaRetroceso()">



    <div>
        <ul class="nav nav-tabs">
            <li role="presentation"><a href="/Home/Index">Menu Principal</a> </li>
        </ul>
    </div>

    <div>


        @*<h1 class='elegantshadow'>Clientes</h1>*@
        @*<h1 class='deepshadow'>Clientes</h1>*@
        @*<h1 class='insetshadow'>Clientes</h1>*@
        <h1 class='retroshadow'>Clientes</h1>

        <div><a href="/Clientes/NuevoCliente" class="btn btn-warning">Nuevo Cliente</a></div><br /><br />

    </div>
    <div>
        <ul>

            @*<li><a href="#">Cargar Pedidos</a> </li>
                <li><a href="#">Mostrar Productos</a></li>
                <li><a href="#">Cargar Productos</a></li>
                <li><a href="#">Diseños</a></li>
                <li><a href="#">Estadisticas</a></li>*@
        </ul>

    </div>

    <div>
        @*<input type="text" id="myInput" onkeyup="myFunction()" placeholder="Buscar por nombres">*@
        <table class="table table-striped">

            <tr>
                <td>Codigo Cliente</td>
                <td>Nombre</td>
                <td><label>Nombre Usuario</label></td>
                <td><label>Edad</label></td>
                <td><label>Sexo</label></td>
                <td><label>Ciudad</label></td>
                <td><label>Mail</label></td>
                <td><label>Telefono</label></td>
                @*<td><label>Estado</label></td>*@

                <td colspan="2"><label>Acciones</label></td>
            </tr>
            @foreach (ClientesVer c in @Model.listaClientes)
            {
                <tr>
                    <td>@c.id_cliente</td>
                    <td>@c.nombre</td>
                    <td>@c.nombre_usuario</td>
                    <td>@c.edad</td>
                    <td>@c.sexo</td>
                    <td>@c.ciudad</td>
                    <td>@c.email</td>
                    <td>@c.telefono</td>
                    @*<td>@c.estado</td>*@

                    <td><a href="/Clientes/EditarCliente/@c.id_cliente"><img src="~/Content/Diseños/edit.png" width="25px" /></a></td>

                </tr>

            }
        </table>



    </div>


    <div>

        <footer>CHCRemeras</footer>

    </div>
    <script src="~/Content/Script.js"></script>
</body>
</html>

